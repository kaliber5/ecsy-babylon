{
  "name": "ecsy-babylon",
  "version": "0.1.5",
  "description": "",
  "keywords": [],
  "main": "dist/index.cjs.js",
  "module": "dist/src/index.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Simon Ihmig <simon.ihmig@kaliber5.de>",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaliber5/ecsy-babylon"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c rollup.config.js && tsc -b tsconfig.build.json",
    "docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "start": "rollup -c rollup.config.js -w",
    "lint": "yarn lint:ts && yarn lint:eslint",
    "lint:ts": "tsc --noEmit",
    "lint:eslint": "eslint . --ext .js,.ts",
    "test": "jest",
    "test:watch": "jest --coverage --watch",
    "test:prod": "yarn run lint && yarn run test -- --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn build",
    "postpublish": "rimraf dist"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "yarn lint:eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@babylonjs/core": "^4.1.0",
    "@babylonjs/materials": "^4.1.0",
    "ecsy": "^0.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@rollup/plugin-typescript": "^4.0.0",
    "@types/jest": "^25.1.4",
    "@types/lodash-es": "^4.17.3",
    "@types/node": "^13.11.0",
    "@types/rollup-plugin-sourcemaps": "^0.4.2",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-jest": "^25.1.0",
    "colors": "^1.3.2",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.11",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "jest-config": "^25.2.4",
    "jest-extended": "^0.11.5",
    "lint-staged": "^10.0.10",
    "prettier": "^1.14.3",
    "rollup": "^1.31.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-sourcemaps": "^0.5.0",
    "semantic-release": "^17.0.4",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.8.1",
    "typedoc": "^0.17.3",
    "typescript": "^3.8.2"
  },
  "volta": {
    "node": "10.18.0",
    "yarn": "1.21.1"
  }
}
